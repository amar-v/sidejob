<div class="row">
    <div class="col-md-6 col-md-offset-3 formpages">
    {{#if msg}}
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <i>{{ msg }}</i>
    </div>
    {{/if}}

     <form role="form" method="post" action="/{{posturl}}">
      <h2>Sign In <small> Chess64.me Users</small></h2>
        <hr class="colorgraph">
    
            <div class="form-group">
                <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Your Email" tabindex="3"  autofocus required>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Your Password" tabindex="4"  autofocus required>
            </div>
    
            <div class="row">
                <div class="col-xs-5 col-sm-4 col-md-4">
                    <span class="button-checkbox">
                        <button type="button" class="btn" data-color="info" tabindex="7">Keep me Logged In</button>
                        <input type="checkbox" name="t_and_c" id="t_and_c" class="hidden" value="1" >
                    </span>
                </div>
                <div class="col-xs-7 col-sm-8 col-md-8">
                     Dont Have any account? <a class="label label-primary" href="/register">Register</a></div>
            </div>
                <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-md-6"><input type="submit" value="Signin" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                <div class="col-xs-12 col-md-6"><a href="/forgotpassword" class="btn btn-success btn-block btn-lg">Forgot Password?</a></div>
            </div>
            </form>

        <div id="loginError" hidden="hidden">{{ error }}</div>
         <div id="logoutSuccess" hidden="hidden">{{ logoutSuccessMessage }}</div>
    <div id="registerSuccess" hidden="hidden">{{ registerSuccessMessage }}</div>

    </div>
</div>